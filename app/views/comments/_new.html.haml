= form_for @post.comments.new, :html => { :multipart => true }, remote: true do |f|
  = render 'layouts/error_messages', object: f.object

  = f.hidden_field :post_id, value: @post.id
  = f.hidden_field :page, value: params[:page]
  .form-group
    = f.label :content
    %br/
    = f.text_area :content, class: "form-control", rows: 5, maxlength:5000
  .form-group
    #files_comment
    = f.file_field :files, multiple: true
    = f.hidden_field :id, value: '-1'

  .form-group
    = f.submit "#{t 'user_.send'}" , class: "btn btn-default"

  .new_comment_errors