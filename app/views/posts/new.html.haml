= form_for @post do |f|
  = render 'layouts/error_messages', object: @post
  .row
    .col-md-2
    .col-md-8

      .form-group
        = f.label :topik
        %br/
        = f.text_field :topik, autofocus: true, class: "form-control", maxlength: 125

      = f.label :tag_list, value: "#{t 'content.tags_add'}"
      .form-group
        = f.text_field :tag_list, 'data-role'=>'tagsinput', :class=> "form-control"

      .form-group
        = f.label :content
        %br/
        = f.text_area :content, class: "form-control", rows: 15, maxlength: 10000

        = f.hidden_field :user_id

      .form-group
        = f.submit "#{t 'content.create_post'}" , class: "btn btn-default "
        = link_to "#{t 'content.cancel'}", :back